@model IEnumerable<CookBookApp.Models.Recipe>

<div class="container mt-3">
    <div class="row">
        <div class="card-deck">
            @foreach (var recipe in Model)
            {
            <div class="card mb-4" style="min-width: 18rem; max-width: 18rem;">
                @if (recipe.Picture != null)
                {
                    var path = "data:image/jpeg;base64," + @Convert.ToBase64String(recipe.Picture.Content, 0, recipe.Picture.Content.Length);
                    <img class="card-img-top" src="@path" alt="Card image cap">
                }
                else
                {
                    <img src="https://picsum.photos/200/300/?blur" />
                }

                <div class="card-body">
                    <h5 class="card-title">@recipe.Name</h5>
                    <p class="card-text">@recipe.ShortDescription</p>
                    <a asp-action="Details" asp-controller="Recipes" asp-route-id="@recipe.Id"
                       class="btn btn-info">Details</a>
                </div>
                <div class="card-footer">
                    <p class="card-text"><small class="text-muted">Added @((DateTime.Now - recipe.CreatedAt).Days)</small></p>
                </div>
                <div>

                </div>
            </div>
            }
        </div>
    </div>
</div>