@using CinemaApp.Web.ViewModels.Cinema
@model IEnumerable<CinemaIndexViewModel>

@{
    ViewData["Title"] = "Configure Movie Showtimes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-6 text-primary fw-bold">Configure Movie Showtimes</h1>
        <a asp-area="Manager" asp-controller="Home" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="row">
        @foreach (var cinema in Model)
        {
            <div class="col-md-4">
                <div class="card text-white bg-dark mb-3">
                    <div class="card-body text-center">
                        <h5 class="card-title">@cinema.Name</h5>
                        <p class="card-text">@cinema.Location</p>
                        <button class="btn btn-info"
                                onclick="openShowtimeSetupModal('@cinema.Id', '@cinema.Name', '@cinema.Location')">
                            <i class="bi bi-clock-history"></i> Adjust Showtimes
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div id="manageShowtimesModalContainer"></div>

@section Scripts {
    <script src="~/js/showtimeSetup.js"></script>
}

