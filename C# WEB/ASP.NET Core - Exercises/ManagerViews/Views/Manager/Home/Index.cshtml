@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-fluid vh-100 d-flex flex-column justify-content-between">
    <div>
        <div class="text-center mt-3">
            <h1 class="display-6 mb-2 text-primary fw-bold">Welcome to the Manager Dashboard</h1>
            <p class="lead mb-3 text-light">Manage cinema programs, tickets, and movie showtimes.</p>
        </div>

        <div class="d-flex flex-column align-items-center gap-2">

            <div class="card shadow-lg border-0 bg-dark text-white rounded-3 w-75 w-md-50 h-25">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="bi bi-film text-warning display-5 mb-2"></i>
                    <h5 class="card-title fw-bold">Manage Cinema Program</h5>
                    <p class="card-text text-muted">Adjust the movie schedule for each cinema.</p>
                    <a asp-area="Manager" asp-controller="ConfigureCinemas" asp-action="Index"
                       class="btn btn-warning fw-bold shadow-sm w-100 py-2">
                        <i class="bi bi-calendar-check"></i> Configure Program
                    </a>
                </div>
            </div>            

            <div class="card shadow-lg border-0 bg-dark text-white rounded-3 w-75 w-md-50 h-25">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="bi bi-clock-history text-info display-5 mb-2"></i>
                    <h5 class="card-title fw-bold">Configure Movie Showtimes</h5>
                    <p class="card-text text-muted">Modify and adjust movie screening times.</p>
                    <a asp-area="Manager" asp-controller="ShowtimeSetup" asp-action="Index"
                       class="btn btn-info fw-bold shadow-sm w-100 py-2">
                        <i class="bi bi-clock"></i> Configure Showtimes
                    </a>
                </div>
            </div>

            <div class="card shadow-lg border-0 bg-dark text-white rounded-3 w-75 w-md-50 h-25">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="bi bi-ticket-perforated text-success display-5 mb-2"></i>
                    <h5 class="card-title fw-bold">Manage Ticket Availability</h5>
                    <p class="card-text text-muted">Update and monitor ticket availability.</p>
                    <a asp-area="Manager" asp-controller="Ticket" asp-action="Index"
                       class="btn btn-success fw-bold shadow-sm w-100 py-2">
                        <i class="bi bi-ticket-detailed"></i> Configure Tickets
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
